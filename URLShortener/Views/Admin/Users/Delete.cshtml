@model  UserDeleteViewModel
@{
    ViewData["Title"] = "Delete User";
}

<div style="max-width: 1100px; margin-left: auto; margin-right: auto;">
    <h2>Delete User</h2>
    <p class="text-danger">@ViewData["ErrorMessage"]</p>
    <h3>Are you sure you want to delete this user?</h3>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.User.Id)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.User.Id)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.User.UserName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.User.UserName)
        </dd>
        <dt>
            @Model.User.UserName's links will be also deleted
        </dt>

    </dl>
    <div class="row">
        <div class="col-2"></div>
    <table class="table table-hover col-10 table-sm">
        <thead class="thead-dark">
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Target Url
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Urls)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TargetUrl)
                    </td>
                </tr>
            }
        </tbody>
    </table>
        </div>
    <form asp-action="DeleteUser">
        <input type="hidden" asp-for="User.Id" />
        <input type="submit" value="Delete" class="btn btn-default" /> |
        <a asp-controller="Admin" asp-action="ListUsers">Back to Users List</a>
    </form>
</div>