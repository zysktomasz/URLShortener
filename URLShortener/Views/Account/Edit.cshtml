@model  UrlEditViewModel
@{
    ViewData["Title"] = "Edit url";
}
<div style="max-width: 1100px; margin-left: auto; margin-right: auto;">
    <h2>Edit url</h2>

    <div class="row">
        <div class="col-md-8">
            <form asp-action="Edit" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="UrlId" />
                <div class="form-group">
                    <label asp-for="TargetUrl" class="control-label"></label>
                    <input asp-for="TargetUrl" class="form-control" />
                    <span asp-validation-for="TargetUrl" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </form>
            <a asp-action="List">Back to List</a>
        </div>
    </div>
</div>