@{
    ViewData["Title"] = "Preview";
}

<div style="max-width: 900px; margin-left: auto; margin-right: auto;">
    <div class="alert alert-info" role="alert">
        <h4 class="alert-heading">Details of address you would be redirected to</h4>
        <p>Redirection target url: @ViewData["TargetUrl"]</p>
        <hr>
        <form asp-action="RedirectToAction">
            <input type="hidden" name="urlName" id="urlName" value="@ViewData["Name"]" />
            <button type="submit" class="btn btn-secondary">Go to target url</button>
        </form>
        
    </div>
</div>