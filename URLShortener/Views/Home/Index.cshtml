@model UrlViewModel
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@{
    ViewData["Title"] = "Index";
}
<nav class="navbar navbar-light justify-content-between" style="background-color: #e3f2fd;">
    <a class="navbar-brand">URLShortener</a>
    @if (SignInManager.IsSignedIn(User))
    {
    <form asp-controller="Account" asp-action="Logout" class="form-inline" method="post">
            Hello, @UserManager.GetUserName(User)
        <button type="submit" class="btn btn-secondary">Logout</button>
    </form>
    } else
    {
        <form class="form-inline">
            <input type="button" value="Login" onclick="location.href='@Url.Action("Login", "Account")'" class="btn btn-secondary" style="margin-right:5px;">
            <input type="button" value="Register" onclick="location.href='@Url.Action("Register", "Account")'" class="btn btn-secondary">
        </form>
    }
</nav>

<div style="max-width: 900px; margin-left: auto; margin-right: auto; text-align: center;">

    @if (!String.IsNullOrEmpty((string)TempData["shortenedUrl"]))
    {
        <div class="form-group row">
            <div class="col-6">
                Your shortened URL:
                <input class="form-control" id="shortenedUrl" type="text"
                       value="http://@Context.Request.Host@Context.Request.Path@TempData["shortenedUrl"]">
            </div>
        </div>
    }
    <div class="display-4">Shorten your URL</div>

    <form asp-action="Index" method="post">
        <div asp-validation-summary="All" class="text-danger" style="text-align:left;"></div>

        <div class="row align-items-center justify-content-center">
            <div class="col-8 form-group">
                <input asp-for="TargetUrl" class="form-control" placeholder="https://www.youtube.com/watch?v=dQw4w9WgXcQ" />
            </div>
            <div class="col-4 form-group" style="text-align: left;">
                <button type="submit" class="btn btn-primary">Shorten</button>
            </div>
        </div>
        <div class="form-group row align-items-center">
            <label asp-for="CustomName" class="col-2 col-form-label">Custom Name</label>
            <div class="input-group col-6">
                <div class="input-group-prepend"><span class="input-group-text">https://localhost/</span></div>
                <input asp-for="CustomName" class="form-control" placeholder="(optional)">
            </div>
        </div>

    </form>
</div>